@model ExportPdfInputModel
@{
    ViewData["Title"] = "Export PDF";
}

<h1>Export PDF</h1>
<p class="text-muted">
    This step reserves the export flow and output naming.
</p>

<form asp-action="Export" method="post" class="card p-3">
    <input asp-for="DocumentId" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="OutputFileName" class="form-label">Output File Name</label>
        <input asp-for="OutputFileName" class="form-control" />
        <span asp-validation-for="OutputFileName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Run Export Placeholder</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
