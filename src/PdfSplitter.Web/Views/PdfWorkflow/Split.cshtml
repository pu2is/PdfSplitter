@model SplitPlanInputModel
@{
    ViewData["Title"] = "Split PDF";
}

<h1>Manual Split</h1>
<p class="text-muted">
    Configure page ranges in a simple placeholder format like <code>1-3, 4-6</code>.
</p>

<form asp-action="Split" method="post" class="card p-3">
    <input asp-for="DocumentId" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="RangesText" class="form-label">Page Ranges</label>
        <input asp-for="RangesText" class="form-control" />
        <span asp-validation-for="RangesText" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Continue to Export</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
